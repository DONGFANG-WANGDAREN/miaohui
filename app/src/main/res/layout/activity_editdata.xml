<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dingzhi.miaohui.ui.activity.editdata.EditDataActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_top"
        android:background="@color/toolbarcolor"
        app:theme="@style/AppTheme.Base.Fanhui"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/img_01"
                android:layout_width="225dp"
                android:layout_height="225dp"
                android:background="@mipmap/icon_imgaddback"/>

            <ImageView
                android:id="@+id/img_02"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/img_01"
                android:background="@mipmap/icon_imgaddback"/>

            <ImageView
                android:id="@+id/img_03"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@id/img_02"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_01"
                android:background="@mipmap/icon_imgaddback"/>

            <ImageView
                android:id="@+id/img_04"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@id/img_01"
                android:layout_marginTop="5dp"
                android:background="@mipmap/icon_imgaddback"/>

            <ImageView
                android:id="@+id/img_05"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@id/img_01"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_04"
                android:background="@mipmap/icon_imgaddback"/>

            <ImageView
                android:id="@+id/img_06"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@id/img_01"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_05"
                android:background="@mipmap/icon_imgaddback"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_myinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"

            >
            <LinearLayout
                android:id="@+id/lay_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/img_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_nv"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:text="静静静静静"
                    android:textColor="#4c4c4c"/>
                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#4c4c4c"
                    android:text="21"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#b3b3b3"
                android:textSize="9sp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/lay_info"
                android:layout_marginTop="5dp"
                android:text="点击编辑账户信息：姓名，年龄"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_fanhui"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的信息"
                    android:textColor="#4c4c4c"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="56dp"
                    android:layout_height="1dp"
                    android:background="#b3b3b3"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="星座"
                        android:textSize="12sp"
                        android:textColor="#808080"/>
                    <TextView
                        android:id="@+id/tv_constellation"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="水瓶座"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:drawableRight="@mipmap/icon_fanhui"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="行业"
                        android:textSize="12sp"
                        android:textColor="#808080"/>
                    <TextView
                        android:id="@+id/tv_industry"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="互联网"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:drawableRight="@mipmap/icon_fanhui"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="公司"
                        android:textSize="12sp"
                        android:textColor="#808080"/>
                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="阿里巴巴"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:drawableRight="@mipmap/icon_fanhui"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="地区"
                        android:textSize="12sp"
                        android:textColor="#808080"/>
                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="浙江"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:drawableRight="@mipmap/icon_fanhui"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="经常出没"
                        android:textSize="12sp"
                        android:textColor="#808080"/>
                    <TextView
                        android:id="@+id/tv_haunt"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="杭州"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:drawableRight="@mipmap/icon_fanhui"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="个性签名"
                        android:textSize="12sp"
                        android:textColor="#808080"/>
                    <TextView
                        android:id="@+id/tv_signature"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="很酷"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:drawableRight="@mipmap/icon_fanhui"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的信息"
                    android:layout_marginTop="5dp"
                    android:textColor="#4c4c4c"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="56dp"
                    android:layout_height="1dp"
                    android:background="#b3b3b3"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_hobby"/>
                    <TextView
                        android:id="@+id/tv_hobby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="我的爱好"
                        android:drawableRight="@mipmap/icon_fanhui"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_app"/>
                    <TextView
                        android:id="@+id/tv_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="喜欢的应用"
                        android:drawableRight="@mipmap/icon_fanhui"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_sport"/>
                    <TextView
                        android:id="@+id/tv_sport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="我喜欢的运动"
                        android:drawableRight="@mipmap/icon_fanhui"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_music"/>
                    <TextView
                        android:id="@+id/tv_music"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="我喜欢的音乐"
                        android:drawableRight="@mipmap/icon_fanhui"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_book"/>
                    <TextView
                        android:id="@+id/tv_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="我喜欢的书"
                        android:drawableRight="@mipmap/icon_fanhui"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的社交账号"
                    android:layout_marginTop="5dp"
                    android:textColor="#4c4c4c"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="76dp"
                    android:layout_height="1dp"
                    android:background="#b3b3b3"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="微信"
                        android:textSize="12sp"
                        android:textColor="#808080"/>
                    <TextView
                        android:id="@+id/tv_weixin"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:drawableRight="@mipmap/icon_fanhui"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
